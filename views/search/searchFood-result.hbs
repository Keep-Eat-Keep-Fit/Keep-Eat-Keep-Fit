<div class="container-fluid">
    <div class="row m-3">    
        {{#each foodArr}}
            <div class="col-12 col-sm-3">
                <div class="card product mb-3 bg-success-subtle opacity-90" style="width:23vw;">
                    <div class="card-body text-center mb-2">
                            <section class="food-container">
                                {{#if this.food.image}}
                                <img src="{{this.food.image}}" class="card-img-top" style="height: 15vh;width:13vw;">
                                {{else}}
                                <img src="/images/image-coming-soon-placeholder.png" class="card-img-top" style="height: 17vh;width:13vw;">
                                {{/if}}
                            
                                <div class="d-flex flex-column">
                                    <div class="align-items-center mt-2" style="height:10vh;">
                                        <h4 class="my-2 align-items-center" style="max-height:10vh;">{{this.food.label}}</h4>
                                    </div>
                                    <div class="input-group flex-nowrap mb-3 ">
                                        <span class="input-group-text col-6" id="addon-wrapping">Energy :</span>
                                        <input type="number" class="form-control" value="{{this.food.nutrients.ENERC_KCAL}}"
                                            aria-describedby="addon-wrapping" disabled />
                                        <span class="input-group-text" id="basic-addon2"> kcal </span>
                                    </div>
                                    <div class="input-group flex-nowrap mb-3 ">
                                        <span class="input-group-text col-6" id="addon-wrapping">Protein :</span>
                                        <input type="number" class="form-control" value="{{this.food.nutrients.PROCNT}}"
                                            aria-describedby="addon-wrapping" disabled />
                                        <span class="input-group-text col-1 px-4" id="basic-addon2"> g </span>
                                    </div>
                                    <div class="input-group flex-nowrap mb-3 ">
                                        <span class="input-group-text col-6" id="addon-wrapping">Total lipid (Fat) :</span>
                                        <input type="number" class="form-control" value="{{this.food.nutrients.FAT}}"
                                            aria-describedby="addon-wrapping" disabled />
                                        <span class="input-group-text col-1 px-4" id="basic-addon2"> g </span>
                                    </div>
                                    <div class="input-group flex-nowrap mb-3 ">
                                        <span class="input-group-text col-6" id="addon-wrapping">Carbohydrate :</span>
                                        <input type="number" class="form-control col-2" value="{{this.food.nutrients.CHOCDF}}"
                                            aria-describedby="addon-wrapping" disabled />
                                        <span class="input-group-text col-1 px-4" id="basic-addon2">g</span>
                                    </div>
                                    <div class="input-group flex-nowrap mb-3 ">
                                        <span class="input-group-text col-6" id="addon-wrapping">Fiber :</span>
                                        <input type="number" class="form-control" value="{{this.food.nutrients.FIBTG}}"
                                            aria-describedby="addon-wrapping" disabled />
                                        <span class="input-group-text col-1 px-4" id="basic-addon2"> g </span>
                                    </div>
                                </div>
                                <div>
                                                            
                                    <form action="/food/create" method="post">
                                        <input type="text" value="{{this.food.label}}" name="name" hidden>
                                        <input type="number" value="{{this.food.nutrients.ENERC_KCAL}}" name="energy" hidden />
                                        <button class="m-1 ms-1 btn lh-1 btn-outline-secondary" type="submit">Add to your Meal-Diary</button>
                                    </form>
                                   
                                     <button class="m-1 ms-1 btn lh-1 btn-outline-secondary" type="submit" hidden>Add to your Meal-Diary</button>
                                   
                                </div>                                   
                                                         
                                  
                            </section>        
                        </div>  
                 </div>
            </div>
        {{/each}}    
    </div>
</div>