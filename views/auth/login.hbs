<div id="form" class="m-5">
  <h2 class="text-center m-5 ">Login</h2>
  <form action="/login" method="POST">

    <div class="d-flex flex-column">
      <div class="text-center row m-3">
        <label>          
            <input class="col-3" type="text" name="username" placeholder="Username" />         
        </label>
      </div>
      <div class="text-center row m-3">
        <label> 
          <input class="col-3"  type="email" name="email" placeholder="Email Address" required />
        </label>
      </div>
      <div class="text-center row m-3">
        <label> 
          <input class="col-3"  type="password" name="password" placeholder="Password" required />
        </label>
      </div>
    </div>
    <div class="text-center m-3">
      <button class="btn btn-secondary col-2" type="submit">Login</button>
    </div>

  
    {{!-- error message will be added here --}}
    {{#if errorMessage}}
    <div class="alert alert-success d-flex align-items-center position-absolute start-50 translate-middle mt-5" role="alert" style="width: 22vw;height:6vh;">
      <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 d-flex position-relative" viewBox="0 0 16 16"
        role="img" aria-label="Warning:" style="height: 3vh;">
        <path
          d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
      </svg>
      <div>
         <p class="error ms-4 position-absolute start-50 translate-middle" style="width: 18vw;">{{errorMessage}}</p>
      </div>
    </div>
    {{!-- <p class="error text-center">{{errorMessage}}</p> --}}
    {{/if}}
  </form>
</div>
