   <body>
      <header class="bg-light">
         <nav class="container d-flex flex-column flex-md-row justify-content-end pt-3">           
      
            <div class="d-flex flex-row ">
               {{#if userDetails}}
               <p class="m-1 pt-2">Hello {{userDetails.username}},</p>
               <form action="/logout" method="POST">
                  <button class="my-1 btn lh-2">Logout</button>
               </form>
               <a class="m-1 pt-2 nav-link" href="/user-profile">My Page</a>
               {{else}}
               <a class="pb-3 d-none d-md-inline-block nav-link mx-3" href="/signup">Register</a>
               <a class="pb-3 d-none d-md-inline-block nav-link" href="/login">Login</a> 
               {{/if}}
            </div>
         </nav>
      </header>

   <div >  
      {{{body}}}
   </div>
      <script src="/js/script.js"></script>
   </body>


   <footer class="mt-auto text-white-50">
