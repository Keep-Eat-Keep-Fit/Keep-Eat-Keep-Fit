<h1>Meals in your DB</h1>
 
{{#each meals}}
    <section class="book-summary">
        <h2>Date of meal: {{this.date}}</h2>
        <p>
            Food of Breakfast:
            {{#each this.breakfastFood}}
                 <br>
                 {{name}} |
                 Energy: {{energy}} kcals |
                 <form action="/meals/calculateCalorie" method="post">
                    Pieces: <input type="number" step="0.1" value="{{quantity}}" min="0" name="quantity" id="qty_bf" required> |
                    <input type="number" value="{{energy}}" name="energy" hidden>
                    <input type="string" value="{{_id}}" name="id" hidden>
                    <button type="submit">Confirm</button>
                    Calories: {{totalCalories}}
                 </form>
                 <br> 
            {{/each}}
            <br>
            Food of Lunch: 
            {{#each this.lunchFood}}
                <br>
                 {{name}} |
                 Energy: {{energy}} kcals |
                 <form action="/meals/calculateCalorie" method="post">
                    Pieces: <input type="number" step="0.1" value="{{quantity}}" min="0" name="quantity"required> |
                    <input type="number" value="{{energy}}" name="energy" hidden>
                    <input type="string" value="{{_id}}" name="id" hidden>
                    <button type="submit">Confirm</button>
                    Calories: {{totalCalories}}
                 </form>
                 <br> 
            {{/each}}
            <br>
            Food of Dinner:
            {{#each this.dinnerFood}}
                 <br>
                 {{name}} |
                 Energy: {{energy}} kcals |
                 <form action="/meals/calculateCalorie" method="post">
                    Pieces: <input type="number" step="0.1" value="{{quantity}}" min="0" name="quantity" id="qty_bf" required> |
                    <input type="number" value="{{energy}}" name="energy" hidden>
                    <input type="string" value="{{_id}}" name="id" hidden>
                    <button type="submit">Confirm</button>
                    Calories: {{totalCalories}}
                 </form>
                 <br> 
            {{/each}}
            <br>
            This day I also ate: 
            {{#each this.otherFood}}
                <br>
                 {{name}} |
                 Energy: {{energy}} kcals |
                 <form action="/meals/calculateCalorie" method="post">
                    Pieces: <input type="number" step="0.1" value="{{quantity}}" min="0" name="quantity" id="qty_bf" required> |
                    <input type="number" value="{{energy}}" name="energy" hidden>
                    <input type="string" value="{{_id}}" name="id" hidden>
                    <button type="submit">Confirm</button>
                    Calories: {{totalCalories}}
                 </form>
                 <br> 
            {{/each}}
            <br>
            Calories: {{this.calories}} <br>
            
        </p>
    </section>
{{/each}}